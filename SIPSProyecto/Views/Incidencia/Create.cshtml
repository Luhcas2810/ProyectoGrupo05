@model SIPSProyecto.Models.Incidencia

@{
    ViewBag.Title = "Create";
}
<h2>Notificar incidencia</h2>
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="~/Content/cus7styles.css">
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr class="divider">
    <div class="container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="columna1">
            <div class="form-group">
                <label for="adm_iCodigo">Administrador: </label>
                @Html.DropDownListFor(model => model.adm_iCodigo, (SelectList)ViewBag.Administradores, "Seleccione una administrador", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.adm_iCodigo, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="columna2">
            <div class="form-group">
                <label for="inc_txDescripcion">Incidencia: </label>
                @Html.TextAreaFor(model => model.inc_txDescripcion, new { htmlAttributes = new { @class = "form-control", rows = 4, cols = 50 } })
                @Html.ValidationMessageFor(model => model.inc_txDescripcion, "", new { @class = "text-danger" })

            </div>

        </div>
        
        <div class="form-group">
            <div class="col-md-offset-1 col-md-1">
                <input type="submit" value="Notificar" class="btn btn-info" style="margin-top: 12px; margin-left: -80px;" />
            </div>
        </div>
    </div>
}


