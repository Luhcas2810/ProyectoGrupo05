@model SIPSProyecto.Models.Tarea

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>

}
@using (Html.BeginForm("Search", "Tarea"))
{
    <div class="form-group">
        @Html.DropDownList("codigo_est", (SelectList)ViewBag.Estudiantes, "Seleccione un Estudiante", new { @class = "TextBox", @style = "font-size: 16px;" })
        <button type="submit"></button>
    </div>
}

@using (Html.BeginForm("Create", "Tarea"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tarea</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Nombre">Nombres: </label>
            <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" disabled>
        </div>
        <div class="form-group" style="display: none">
            <label for="id">Nombres: </label>
            <input type="text" id="id" name="id" value="@Model.est_iCodigo">
        </div>
        <div class="form-group">
            <label for="Apellido">Apellidos: </label>
            <input type="text" id="Apellido" name="Apellido" value="@Model.Apellido" disabled>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tar_vcDescripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tar_vcDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tar_vcDescripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit"></button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
